@page
@model Torneo.App.Frontend.Pages.DTs.CreateModel
@{
}
<div class="col-sm-12 col-md-4 col-lg-4 col-xl-4">
    <h1>Nuevo Director Tecnico</h1>
    <form method="post">
        <div class="form-group">
            <label asp-for="dt.Nombre"></label>
            <input asp-for="dt.Nombre" class="form-control" placeholder="Ingrese el nombre del Director Técnico" autofocus>
        </div>
        <div class="form-group">
            <label asp-for="dt.Documento"></label>
            <input asp-for="dt.Documento" class="form-control" placeholder="Ingrese el documento del Director Técnico">
        </div>
        <div class="form-group mb-3">
            <label asp-for="dt.Telefono"></label>
            <input asp-for="dt.Telefono" class="form-control" placeholder="Ingrese el teléfono del Director Técnico">
        </div>
        <div class="form-group mb-3 d-grid gap-2">
            <button type="submit" class="btn btn-success btn-block">Crear Director Técnico</button>
        </div>
        
    </form>
    <div class="d-grid gap-2">
        <a class="btn btn-primary" asp-page="./Index">Volver</a>
    </div>
</div>