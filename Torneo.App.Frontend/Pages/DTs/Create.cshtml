@page
@model Torneo.App.Frontend.Pages.DTs.CreateModel
@{
}
<h1>Nuevo Director Tecnico</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="dt.Nombre"></label>
        <input asp-for="dt.Nombre" class="form-control" placeholder="Ingrese el nombre del Director Técnico">
    </div>
    <div class="form-group">
        <label asp-for="dt.Documento"></label>
        <input asp-for="dt.Documento" class="form-control" placeholder="Ingrese el documento del Director Técnico">
    </div>
    <div class="form-group">
        <label asp-for="dt.Telefono"></label>
        <input asp-for="dt.Telefono" class="form-control" placeholder="Ingrese el teléfono del Director Técnico">
    </div>
    <button type="submit" class="btn btn-primary btn-block">Crear Director Técnico</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>
