@page
@model Torneo.App.Frontend.Pages.Municipios.EditModel
@{
}
<div class="col-sm-12 col-md-4 col-lg-4 col-xl-4">
    <h1>Editar municipio</h1>
    <form method="post">
        <div class="form-group mb-3">
            <label asp-for="municipio.Id" style="color: white;"></label>
            <input asp-for="municipio.Id" class="form-control" readonly>
            <!--<span class="text-danger" asp-validation-for="municipio.Nombre"></span>-->
        </div>
        <div class="form-group mb-3">
            <label asp-for="municipio.Nombre" style="color: white;"></label>
            <input asp-for="municipio.Nombre" class="form-control">
        </div>
        <div class="form-group mb-3 d-grid gap-2">
            <button type="submit" class="btn btn-warning btn-block">Editar municipio</button>
        </div>
    </form>
    <div class="d-grid gap-2">
        <a class="btn btn-secondary" asp-page="./Index">Volver</a>
    </div>
</div>
