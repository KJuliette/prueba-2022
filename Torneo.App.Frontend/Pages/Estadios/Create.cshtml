@page
@model Torneo.App.Frontend.Pages.Estadios.CreateModel
@{
}
<div class="col-sm-12 col-md-4 col-lg-4 col-xl-4">
    <h1>Nuevo estadio</h1>
    <form method="post">
        <div class="form-group mb-3">
            <label asp-for="estadio.Nombre" style="color: white;"></label>
            <input asp-for="estadio.Nombre" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label asp-for="estadio.Direccion" style="color: white;"></label>
            <input asp-for="estadio.Direccion" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="idMunicipio" style="color: white;">Municipio</label>
            <select id="idMunicipio" name="idMunicipio" class="form-control">
                @foreach (var municipio in Model.municipios)
                {
                    <option value="@municipio.Id">@municipio.Nombre</option>
                }
            </select>
        </div>
        <div class="form-group mb-3 d-grid gap-2">
            <button type=" submit" class="btn btn-warning btn-block">Crear estadio</button>
        </div>
    </form>
    <div class="d-grid gap-2">
       <a class="btn btn-secondary" asp-page="./Index">Volver</a>
    </div>
