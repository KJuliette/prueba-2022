@page
@model Torneo.App.Frontend.Pages.Estadios.EditModel
@{
}
<div class="col-sm-12 col-md-4 col-lg-4 col-xl-4">
    <h1>Editar estadio</h1>
    <form method="post">
        <div class="form-group mb-3">
            <label asp-for="estadio.Id" style="color: white;"></label>
            <input asp-for="estadio.Id" class="form-control" readonly>
        </div>
        <div class="form-group mb-3">
            <label asp-for="estadio.Nombre" style="color: white;"></label>
            <input asp-for="estadio.Nombre" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label asp-for="estadio.Direccion" style="color: white;"></label>
            <input asp-for="estadio.Direccion" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label asp-for="MunicipioSelected" style="color: white;">Municipio</label>
            <select asp-for="MunicipioSelected" asp-items="@Model.MunicipioOptions" name="idMunicipio"
                class="form-control">
            </select>
        </div>
        
        <div class="form-group mb-3 d-grid gap-2">
            <button type="submit" class="btn btn-warning btn-block">Actualizar estadio</button>
        </div>
    </form>
    <div class="d-grid gap-2">
        <a class="btn btn-secondary" asp-page="./Index">Volver</a>
    </div>
</div>