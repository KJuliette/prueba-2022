@page
@model Torneo.App.Frontend.Pages.Jugadores.IndexModel
@{
}
<a class="btn btn-warning" asp-page="./Create">Crear Jugadores</a>
<h1>Listado de Jugadores</h1>
<table class="table">
    <thead class="thead/dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Numero</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var jugador in Model.jugadores)
        {
            <tr>
                <th>@jugador.Id</th>
                <td>@jugador.Nombre</td>
                <td>@jugador.Numero</td>
                <td>
                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@jugador.Id">
                        <u>Detalle</u>
                    </a>
                </td>
<div class="row">
    <div class="col-sm-12 col-md-2 col-lg-2 col-xl-2">
        <a class="btn btn-warning btn-lg my-3" asp-page="./Create">Crear Jugadoes</a>
    </div>
    <div class="col-sm-12 col-md-10 col-lg-10 col-xl-10">
        <h1>Listado de Jugadores</h1>
        
        <table class="table table-striped table-hover table-bordered table-secondary">
            <thead class="thead/dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Numero</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
               
                @foreach (var jugador in Model.jugadores)
                {
                    <tr>
                        <th>@jugador.Id</th>
                        <td>@jugador.Nombre</td>
                        <td>@jugador.Numero</td>
                        <td>
                            <a class="btn btn-primary" asp-page="./Details" asp-route-id="@jugador.Id">
                                <u>Detalle</u>
                            </a>
                            <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@jugador.Id">
                                Editar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>