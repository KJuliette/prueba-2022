@page
@model Torneo.App.Frontend.Pages.Jugadores.EditModel
@{
}
<div class="col-sm-12 col-md-4 col-lg-4 col-xl-4">
    <h1>Editar jugador</h1>
    <form method="post">
        <div class="form-group mb-3">
            <label asp-for="jugador.Id" style="color: white;"></label>
            <input asp-for="jugador.Id" class="form-control" readonly>
        </div>
        <div class="form-group mb-3">
            <label asp-for="jugador.Nombre" style="color: white;"></label>
            <input asp-for="jugador.Nombre" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label asp-for="jugador.Numero" style="color: white;"></label>
            <input asp-for="jugador.Numero" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="EquipoSelected" style="color: white;">Equipo seleccionado</label>
            <select asp-for="EquipoSelected" asp-items="@Model.EquipoOptions" name="idEquipo"
                class="form-control">
            </select>
        </div>
        <div class="form-group">
            <label asp-for="PosicionSelected" style="color: white;">Posición</label>
            <select asp-for="PosicionSelected" asp-items="@Model.PosicionOptions" name="idPosicion" class="form-control">
            </select>
        </div>
        <div class="form-group mb-3 d-grid gap-2">
            <button type="submit" class="btn btn-warning btn-block">Actualizar jugador</button>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Actualizar jugador</button>
    </form>
    <div class="d-grid gap-2">
        <a class="btn btn-secondary" asp-page="./Index">Volver</a>
    </div>
</div>
