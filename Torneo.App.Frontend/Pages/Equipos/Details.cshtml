@page
@model Torneo.App.Frontend.Pages.Equipos.DetailsModel
@{
}
<h5 class="display-5">Detalle del equipo</h5>
<div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
    <table class="table table-striped table-hover table-bordered table-secondary">
        <tr>
            <th scope="col">Id</th>
            <td>@Model.equipo.Id</td>
        </tr>
        <tr>
            <th scope="col">Nombre</th>
            <td>@Model.equipo.Nombre</td>
        </tr>
        <tr>
            <th scope="col">Municipio</th>
            <td>@Model.equipo.Municipio.Nombre</td>
        </tr>
        <tr>
            <th scope="col">Director Técnico</th>
            <td>@Model.equipo.DirectorTecnico.Nombre</td>
        </tr>
    </table>
    <a class="btn btn-secondary" asp-page="./Index">Volver</a>
</div>
