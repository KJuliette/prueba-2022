@page
@model Torneo.App.Frontend.Pages.Equipos.IndexModel
@{
}
<div class="row">
    <div class="col-sm-12 col-md-3 col-lg-3 col-xl-3">
        <form method="post">
            <div class="input-group mb-3">
                <select asp-for="MunicipioSelected" asp-items="@Model.MunicipioOptions" name="idMunicipio"
                    class="form-control">
                    <option value="-1">Ver todos</option>
                </select>
                <button class="btn btn-secondary" asp-page-handler="Filtro">
                    <u>Filtrar</u>
                </button>
            </div>
        </form>
        <form method="post">
            <div class="input-group mb-3">
                <input asp-for="@Model.BusquedaActual" name="nombre" class="form-control">
                <button class="btn btn-secondary" asp-page-handler="Buscar">
                    Buscar
                </button>
            </div>
        </form>
        <a class="btn btn-success btn-lg my-3" asp-page="./Create">Crear Equipo</a>
    </div>
    <div class="col-sm-12 col-md-9 col-lg-9 col-xl-9">
        <h1>Listado de Equipos</h1>
        <table class="table table-striped table-hover table-bordered table-dark">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Municipio</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var equipo in Model.equipos)
                {
                    <tr>
                        <th scope="row">@equipo.Id</th>
                        <td>@equipo.Nombre</td>
                        <td>@equipo.Municipio.Nombre</td>
                        <td>
                            <a class="btn btn-success" asp-page="./Details" asp-route-id="@equipo.Id">
                                <u>Detalle</u>
                            </a>
                            <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@equipo.Id">
                                Editar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
