@page
@model Torneo.App.Frontend.Pages.Equipos.CreateModel
@{
}
<div class="col-sm-12 col-md-4 col-lg-4 col-xl-4">
    <h1>Nuevo equipo</h1>
    <form method="post">
        <div class="form-group">
            <label asp-for="equipo.Nombre" style="color: white;"></label>
            <input asp-for="equipo.Nombre" class="form-control" placeholder="Ingrese el nombre del Equipo" autofocus>
        </div>

        <div class="form-group">
            <label for="idMunicipio" style="color: white;">Municipio</label>
            <select id="idMunicipio" name="idMunicipio" class="form-control">
                @foreach (var municipio in Model.municipios)
                {
                    <option value="@municipio.Id">@municipio.Nombre</option>
                }
            </select>
        </div>
        <div class="form-group mb-3">
            <label for="idDT" style="color: white;">Director Técnico</label>
            <select id="idDT" name="idDT" class="form-control">
                @foreach (var dt in Model.dts)
                {
                    <option value="@dt.Id">@dt.Nombre</option>
                }
            </select>
        </div>
        <div class="d-grid gap-2 mb-3">
            <button type="submit" class="btn btn-primary btn-block">Crear equipo</button>
        </div>
        
    </form>
    <div class="d-grid gap-2">
        <a class="btn btn-secondary" asp-page="./Index">Volver</a>
    </div>
</div>