@page
@model Torneo.App.Frontend.Pages.Equipos.EditModel
@{
}
<h5 class="display-5">Editar Equipo</h5>
<form method="post">
    <div class="form-group">
        <label asp-for="equipo.Id" style="color: white;"></label>
        <input asp-for="equipo.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="equipo.Nombre" style="color: white;"></label>
        <input asp-for="equipo.Nombre" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="MunicipioSelected" style="color: white;">Municipio seleccionado</label>
        <select asp-for="MunicipioSelected" asp-items="@Model.MunicipioOptions" name="idMunicipio" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DTSelected" style="color: white;">D.T.</label>
        <select asp-for="DTSelected" asp-items="@Model.DTOptions" name="idDT" class="form-control">
        </select>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Actualizar equipo</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>