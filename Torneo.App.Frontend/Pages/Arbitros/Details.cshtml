@page
@model Torneo.App.Frontend.Pages.Arbitros.DetailsModel
@{
}
<h5 class="display-5">Detalle del arbitro</h5>
<div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
    <table class="table table-striped table-hover table-bordered table-secondary">
        <tr>
            <th scope="col">Id</th>
            <td>@Model.arbitro.Id</td>
        </tr>
        <tr>
            <th scope="col">Nombre</th>
            <td>@Model.arbitro.Nombre</td>
        </tr>
        <tr>
            <th scope="col">Documento</th>
            <td>@Model.arbitro.Documento</td>
        </tr>
        <tr>
            <th scope="col">Telefono</th>
            <td>@Model.arbitro.Telefono</td>
        </tr>
        <tr>
            <th scope="col">Colegio</th>
            <td>@Model.arbitro.Colegio</td>
        </tr>
    </table>
    <a class="btn btn-secondary" asp-page="./Index">Volver</a>
</div>